      "text-justify",
      "box-flex",
      "box-flex-group",
      "box-ordinal-group",
      "box-align",
      "box-orient",
      "box-pack",
      "box-lines",
      "box-direction",
      "box-decoration-break",
      "float",
      "clear",
      "clip",
      "font-smooth",
      "row-gap",
      "scroll-snap-type-x",
      "scroll-snap-type-y",
      "user-modify"
    ]
  }
}